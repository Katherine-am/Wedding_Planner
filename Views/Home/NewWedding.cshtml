@model WrapperModel
<!DOCTYPE>
<html>
<head>
    <link rel="stylesheet" href="~/css/newWedding.css"/>
    <link href="https://fonts.googleapis.com/css?family=Raleway|Tangerine&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
        <div class="regbar col-lg-8 offset-2">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <a href="/Dashboard" class="btn btn-success">Dashboard</a>
                            <a href="/SignOut" class="btn btn-dark float-right">Log Out</a>
                        </div>
                    </div>
                    <!-- WEDDING PLANNER FORM -->
                    <div class="card">
                        <div class="card-body">
                            <h3>Someone else is getting hitched!</h3>
                            <form asp-action="CreateWedding" method="POST">
                                <span asp-validation-for="newWedding.WedderOne"></span>
                                <div class="form-group row">
                                    <label asp-for="newWedding.WedderOne" class="col-form-label col-sm-4">Wedder One:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="newWedding.WedderOne">
                                    </div>
                                </div>
                                <span asp-validation-for="newWedding.WedderTwo"></span>
                                <div class="form-group row">
                                    <label asp-for="newWedding.WedderTwo" class="col-form-label col-sm-4">Wedder Two:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="newWedding.WedderTwo">
                                    </div>
                                </div>
                                <span asp-validation-for="newWedding.Date"></span>
                                <div class="form-group row">
                                    <label asp-for="newWedding.Date" class="col-form-label col-sm-4">Date:</label>
                                    <div class="col-sm-8">
                                        <input type="date" class="form-control" name="newWedding.Date">
                                    </div>
                                </div>
                                <span asp-validation-for="newWedding.Address"></span>
                                <div class="form-group row">
                                    <label asp-for="newWedding.Address" class="col-form-label col-sm-4">Address:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="newWedding.Address">
                                    </div>
                                </div>
                                <div class="text-center">
                                    <input type="submit" class="btn btn-block" value="Create Wedding!">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</body>
</html>